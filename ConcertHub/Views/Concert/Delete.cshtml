@using ConcertHub.ViewModels;
@model DeleteConcertViewModel;
@{
    ViewData["Title"] = "Delete Concert";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.ConcertName</h3>
                <p class="mb-0"><strong>Added By:</strong> @Model.Organizer</p>
                <p class="text-danger mt-3">Are you sure you want to delete @(Model.ConcertName)?</p>
            </div>
            <div class="card-footer">
                <form asp-controller="Concert" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ConcertName" />
                    <input type="hidden" asp-for="Organizer" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-controller="Concert" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>