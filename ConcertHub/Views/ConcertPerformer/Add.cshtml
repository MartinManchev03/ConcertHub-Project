@using ConcertHub.ViewModels;
@model AddConcertPerformersViewModel;

<h2>Add Performers to Concert</h2>

<form asp-action="Add" asp-controller="ConcertPerformer" method="post">
    <input type="hidden" asp-for="ConcertId"/>

    <table>
        <thead>
            <tr>
                <th>Select</th>
                <th>Performer Name</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ConcertPerformers.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="@Model.ConcertPerformers[i].PerformerId" />
                        <input type="checkbox" asp-for="@Model.ConcertPerformers[i].IsChecked" class="form-check-input" />
                    </td>
                    <td>
                        @Model.ConcertPerformers[i].PerformerName
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="button save-performers">Save Performers</button>
</form>