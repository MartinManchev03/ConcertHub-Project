@using ConcertHub.ViewModels;
@model PerformerViewModel;

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Performer" asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.PerformerName" class="form-label-add-edit">Performer Name</label>
                <input asp-for="@Model.PerformerName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.PerformerName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.StageName" class="form-label-add-edit">Stage Name</label>
                <input asp-for="@Model.StageName" class="form-control" aria-required="true" />
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Bio" class="form-label-add-edit">Bio</label>
                <textarea asp-for="@Model.Bio" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Bio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}